root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 2

[vcbuild.bat]
end_of_line = crlf

[configure]
indent_style = space
indent_size = 2

[Makefile]
indent_style = space
indent_size = 4

[{deps,tools}/**]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
trim_trailing_whitespace = ignore
charset = ignore

